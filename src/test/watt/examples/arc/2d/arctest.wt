import 'arc.2d'
import 'std.fs'
import 'std.io'
import 'std.random'

window := new Arc2D(720, 640, 'SomeWindow')

sprite := null
animation := null
instance := null
window.on_start(fun {
    sprite = window.sprite(
        window.texture(
            fs.path_of('C:\Users\MuraDana\Pictures\Screenshots\Снимок экрана 2025-03-24 013709.png')
        )
    )
    animation = window.animation(
        [
            window.texture(
                fs.path_of('C:\Users\MuraDana\Pictures\Screenshots\Снимок экрана 2025-03-24 013709.png')
            ),
            window.texture(
                fs.path_of('G:\SunEnergy\AtticStory\Assets\Match3\Sprites\Gui-02.png')
            )
        ]
    )
    instance = animation.play(sprite, true)
})
window.on_update(fun {
    sprite.set_texture(instance.texture())
    instance.step()
    window.draw_sprite(sprite)
})
window.run()